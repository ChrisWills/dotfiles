! General settings

*customization:		-color

! Remember that these settings are all that matter if you are running just a WM
! on top of Xorg (like xmonad). If you are running gnome-shell or something
! like that these settings dont matter at all.
Xft.dpi:                96
Xft.antialias:          true 
Xft.hinting:            true
! Type of subpixel antialiasing (none, rgb, bgr, vrgb or vbgr)
Xft.rgba:               none 
! What degree of hinting to use (hintnone, hintslight, hintmedium, or hintfull)
Xft.hintstyle: 		hintfull

XTerm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

! XTerm Config
XTerm*termName:         xterm-256color
XTerm*faceName:         Dejavu Sans Mono
!XTerm*faceName:         Inconsolata Medium
!XTerm*faceName:          "Noto Color Emoji:style=Regular:pixelsize=24"
XTerm*faceSize:         14 
XTerm*BorderWidth:      0
XTerm*allowTitleOps:    true 
XTerm*metaSendsEscape:  true
XTerm*boldColors:	false
XTerm*colorBDMode:      false 
XTerm*cursorBlink:      true
XTerm*veryBoldColors:   14
XTerm*loginShell:       true
XTerm*charClass:        33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48,35:48,58:48
XTerm*jumpScroll:       true
XTerm*multiScroll:      true
XTerm*boldMode:         true
XTerm*saveLines:        512
XTerm*scrollBar:        false
XTerm*bellIsUrgent:		  true
XTerm*allowWindowOps: true
!XTerm*selectToClipboard: true

